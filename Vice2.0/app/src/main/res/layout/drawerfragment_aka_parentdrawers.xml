<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="#00ffffff"
        android:backgroundTint="@color/abc_primary_text_disable_only_material_dark"
        android:clickable="true"
        android:theme="@style/Base.TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/drawericon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/teamlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:text="Navigation Options"
            android:fontFamily="cursive"
            android:textSize="45dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark"
            android:gravity="top" />

        <Button
            android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
            android:id="@+id/category_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Articles By Cateogry"

            android:onClick="setContentView"
            android:foreground="#00ffffff"
            android:clickable="true" />

        <Button
            android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
           android:id="@+id/favorite_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To Favorite Articles"
            android:foreground="#00ffffff"
            android:clickable="true" />
        <Button
            android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
            android:id="@+id/tbd_third_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3rd Drawer Button TBD"
            android:clickable="true" />



    </LinearLayout>

</FrameLayout>